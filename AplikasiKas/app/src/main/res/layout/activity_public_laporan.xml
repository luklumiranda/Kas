<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <!-- Header (Blue Section) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#007bff"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/tvReportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laporan Transparansi Kas"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReportPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Periode: 01/01/2024 - 31/01/2024"
                android:textColor="#E0E0E0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvReportDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Deskripsi laporan transparansi kas untuk periode ini."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Summary Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Income Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:backgroundTint="#ffffff">
                        <View android:layout_width="4dp" android:layout_height="match_parent" android:background="#28a745" android:layout_gravity="start"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Pemasukan" android:textColor="#6c757d" android:textSize="12sp" android:textStyle="bold" />
                        <TextView android:id="@+id/tvTotalIncome" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Rp0" android:textColor="#28a745" android:textSize="22sp" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Expense Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Pengeluaran" android:textColor="#6c757d" android:textSize="12sp" android:textStyle="bold" />
                        <TextView android:id="@+id/tvTotalExpense" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Rp0" android:textColor="#dc3545" android:textSize="22sp" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Balance Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Saldo" android:textColor="#6c757d" android:textSize="12sp" android:textStyle="bold" />
                        <TextView android:id="@+id/tvBalance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Rp0" android:textColor="#007bff" android:textSize="22sp" android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Bills Table Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Rincian Tagihan"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:id="@+id/containerBills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Table Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#343a40"
                        android:padding="10dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:text="Siswa" android:textColor="@android:color/white" android:textSize="11sp" android:textStyle="bold" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Tipe" android:textColor="@android:color/white" android:textSize="11sp" android:textStyle="bold" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:text="Jumlah" android:textColor="@android:color/white" android:textSize="11sp" android:textStyle="bold" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Status" android:textColor="@android:color/white" android:textSize="11sp" android:textStyle="bold" />
                    </LinearLayout>
                    <!-- Data Rows will be added here -->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Expense Table Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Rincian Pengeluaran"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:id="@+id/containerExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Table Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#343a40"
                        android:padding="10dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Tanggal" android:textColor="@android:color/white" android:textSize="11sp" android:textStyle="bold" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:text="Kategori" android:textColor="@android:color/white" android:textSize="11sp" android:textStyle="bold" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Deskripsi" android:textColor="@android:color/white" android:textSize="11sp" android:textStyle="bold" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:text="Jumlah" android:textColor="@android:color/white" android:textSize="11sp" android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#dee2e6" android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Laporan ini bersifat transparan dan dapat diakses oleh seluruh anggota koperasi."
                android:textColor="#6c757d"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
